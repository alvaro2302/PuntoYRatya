<style>
.main{
  background-color: #a2d9e8  ;
  height: 820px;
}

table,th,td{
  border: 1px solid black;
  border-collapse: collapse;
  width:500;
  height:100;
  }

  h1{
    position : relative;
    bottom: 31px;
    left: -6px;   
  }

  table.border-top:hover{
    backgroud-color : blue;
    transition: banckgroud-color .5s;
  }

  .topBorder:hover{ 
    border-top: solid;
    backgroud-color : blue;
    transition: banckgroud-color .5s;
  }

  .tittle{
    font-family:Bradley Hand, cursive;
    font-size: 60pt;
    color:  #e3a18e;
    margin-left:30%;
  }

  .jugador{
    font-family:Verdana, sans-serif;
    font-size: 15pt;
    color:  #344c60;
    margin-left:10%;
  }

  .td-border-top{
    border-top: 3px solid black;
  }

  .td-border-left{
    border-left: 3px solid black;
  }

  .td-border-right{
    border-right: 3px solid black;
  }

  .td-border-bottom{
    border-bottom: 3px solid black;
  }

  .escondido {
    visibility: hidden;
  }

  .boton-arriba{
    text-decoration: none;
    padding: 5px;
    font-weight: 400;
    font-size: 20px;
    color: black;
    background-color: #65d97f;
    border-radius: 4px;
    border: 2px solid #30c251;
    margin-left:1%;
  }

  .boton-abajo{
    text-decoration: none;
    padding: 5px;
    font-weight: 400;
    font-size: 20px;
    color: black;
    background-color: #30c251;
    border-radius: 4px;
    border: 2px solid #65d97f;
    margin-left:1%;
  }

  .filas-cols{
    font-family:Verdana, sans-serif;
    font-size: 15pt;
    color:  #344c60;
    margin-left:2%;
  }
</style>

<div class="main">
  <label class="tittle" >DOTS AND LINES</label>
  <br><br><br><br>
  <div class="jugador"> 
    <%  if @jugador1.turno() %>
      <label class= "visible">Es turno de:</label>
      <% else %>
      <label class= "escondido">Es turno de:</label>
    <% end %>
    <br>
    <label>Primer Jugador:  <%= @jugador1.nombre() %></label>
  </div>
  <br>
  <div class="jugador">
    <%  if @jugador2.turno() %>
      <label class= "visible">Es turno de:</label>
      <% else %>
      <label class= "escondido">Es turno de:</label>
    <% end %>
    <br>
    <label>Segundo Jugador: <%= @jugador2.nombre() %></label>
  </div>
  <br><br>
   <% cont=0 %>
  <table id="tabla" name="tabla" style align="center" width= "50%" height="50%";>
    <% @matriz.each do|fila|%>
      <tr>
        <% fila.each do|columna|%>
          <td class="
            <%= 'td-border-top' if columna.ladoArriba() %> 
            <%= 'td-border-left' if columna.LadoIzquierda() %> 
            <%= 'td-border-bottom' if columna.LadoAbajo() %> 
            <%= 'td-border-right' if columna.LadoDerecha() %> 
          ">
          </td>
        <% end %>
      </tr> 
    <% end %>
  </table>  
  <br><br>
  <form method="post" action="/mostrarJugada">
      <label class="filas-cols">Ingrese la fila:</label>
      <input type='text' name='fila' id='fila'>
      <label class="filas-cols">Ingrese la columna:</label>
      <input type='text' name='columna' id='columna' >
      
      <input  class="boton-arriba" type='submit' name='selection' value='Arriba'>
      <input class="boton-abajo" type='submit' name='selection' value='Abajo'>
      <input class="boton-arriba" type='submit' name='selection' value='Izquierda'>
      <input class="boton-abajo" type='submit' name='selection' value='Derecha'>
  </form>
</div>


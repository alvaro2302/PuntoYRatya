<div class="main">
  <label class="tittle" >DOTS AND LINES</label>
  <center>turno del Jugador:  <%= @jugadorActual.nombre %></center>
  <br><br><br><br>
  <div class="jugador"> 
    <label >Primer Jugador:  <%= @jugador1.nombre %> puntaje :  <%= @jugador1.puntos()%></label>
  </div>
  <br>
  <div class="jugador"> 
    <label >Segundo Jugador:  <%= @jugador2.nombre %> puntaje :  <%= @jugador2.puntos()%></label>
  </div>
  <br><br>
   <% cont=0 %>
  <table id="tabla" name="tabla" style align="center" width= "50%" height="50%";>
    <%= @tabla %>
  </table>  
  <br><br>
  <form method="get" action="/mostrarJugada">
      <label class="filas-cols">Ingrese la fila:</label>
      <input type='text' name='fila' id='fila'>
      <label class="filas-cols">Ingrese la columna:</label>
      <input type='text' name='columna' id='columna' >
      
      <input  class="boton-arriba" type='submit' name='selection' value='Arriba'>
      <input class="boton-abajo" type='submit' name='selection' value='Abajo'>
      <input class="boton-arriba" type='submit' name='selection' value='Izquierda'>
      <input class="boton-abajo" type='submit' name='selection' value='Derecha'>
  </form>
</div>

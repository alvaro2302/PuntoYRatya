<style>
.main{
  background-color: #a2d9e8  ;
  height: 820px;
}

table,th,td{
  border: 1px solid black;
  border-collapse: collapse;
  width:500;
  height:100;
  }

  h1{
    position : relative;
    bottom: 31px;
    left: -6px;   
  }

  table.border-top:hover{
    backgroud-color : blue;
    transition: banckgroud-color .5s;
  }

  .topBorder:hover{ 
    border-top: solid;
    backgroud-color : blue;
    transition: banckgroud-color .5s;
  }
  

  .tittle{
    font-family:Bradley Hand, cursive;
    font-size: 60pt;
    color:  #e3a18e;
    margin-left:30%;
  }

  .jugador{
    font-family:Verdana, sans-serif;
    font-size: 15pt;
    color:  #344c60;
    margin-left:10%
  }
  .jugadorOne{
    text-align: left;
  }
  .jugadorTwo{
    text-align: rigth;
  }
  .jugador2Abajo{
    border-bottom: 3px solid blue;
  }
  .jugador2Izquierda{
    border-left: 3px solid blue;
  }

  
  .td-border-top{
    border-top: 3px solid black;
  }

  .td-border-left{
    border-left: 3px solid black;
  }

  .td-border-right{
    border-right: 3px solid black;
  }

  .td-border-bottom{
    border-bottom: 3px solid black;
  }

  .escondido {
    visibility: hidden;
  }

  .boton-arriba{
    text-decoration: none;
    padding: 5px;
    font-weight: 400;
    font-size: 20px;
    color: black;
    background-color: #65d97f;
    border-radius: 4px;
    border: 2px solid #30c251;
    margin-left:1%;
  }

  .boton-abajo{
    text-decoration: none;
    padding: 5px;
    font-weight: 400;
    font-size: 20px;
    color: black;
    background-color: #30c251;
    border-radius: 4px;
    border: 2px solid #65d97f;
    margin-left:1%;
  }

  .filas-cols{
    font-family:Verdana, sans-serif;
    font-size: 15pt;
    color:  #344c60;
    margin-left:2%
  }
